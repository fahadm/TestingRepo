@{
    var db= Database.Open("Shopping");
    var rows = db.Query("Select * from Category");
    int x = 0;
}
<div class="span4 offset4" style="text-align:center"><h3>Categories</h3>
    </div>
<div class='span8 offset2 floatShadow well bgwhite' style="text-align:center">

@foreach (var item in rows)
{
   
    @WriteHelpers.WriteCategory(@"/Images/small/"+ item.Image, item.Name, Convert.ToString(item.Id ));
   
    x++;
}
    </div>