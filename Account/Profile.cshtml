@{
    dynamic res=10;  
    if (WebSecurity.IsAuthenticated)
    {
        var db = Database.Open("Accounts");
    
        res=db.QuerySingle("select * from Users where UserId=@0", WebSecurity.CurrentUserId);    
    }
}
<div class='span8 offset2 floatShadow well bgwhite' id="srchFrm" style="text-align:center">

<table>


                <tr>
                    <td><b>Name</b> </td>
                    <td>@res.UserName</td>
                </tr>

                <tr>
                    <td><b>Full Name</b> </td>
                    <td>@res.namestr </td>
                </tr>
                <tr>
                    <td><b>Phone No</b> </td>
                    <td>@res.Phoneno </td>
                </tr>
                <tr>
                    <td><b>Age </b></td>
                    <td>@res.age</td>
                </tr>
                
                    <tr>
                        <td><b>Address</b> </td>
                        <td>@res.address </td>
                    </tr>
                
                
                <tr>
                    <td><b>Master Card No</b> </td>
                    <td>@res.MasterCard </td>
                </tr>
                <tr>
                    
                    <td><a href="~/Account/ChangePassword" class=" offset3 btn btn-info">Change Password</a> </td>

    
                </tr>



            </table>

    </div>